{%- liquid
    assign image = bst.image
    assign title = bst.title
    assign url = bst.url
    assign fl3 = forloop.length | minus: 3
    assign data_featured = bst.category

-%}
<div class="idemos_item md:w-1/3 w-1/2 px-15{% if forloop.index > fl3 and forloop.length > 3 %} last-three{% endif %} transition duration-300" data-featured="{{ data_featured }}">
    <div class="idemos__image">
        <a href="{{ url }}" title="{{ title }}" {% if target == "blank" %}target="_blank"{% endif %}>
            {%-
                    render 'responsive-image',
                    image: image,
                    class: 'h-full',
                    w_default: 260,
                    h_default: 173
            -%}
        </a>
    </div>
    <div class="idemos__title py-20">
        <h6 class="mb-0 text-center font-semibold">
            <a href="{{ url }}" title="{{ title }}">
                {{ title }}
            </a>
        </h6>
    </div>
</div>