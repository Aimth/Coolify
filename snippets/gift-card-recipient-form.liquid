  assign bst = block.settings
%}

<div class="customer {% if type == 'custom_field' %}tp-custom-field{% endif %}"  style="--bg-custom-field: {{ bst.background_field }}">
  {%- assign gift_card_recipient_control_flag = 'properties[__shopify_send_gift_card_to_recipient]' -%}
  <script src="{{ 'recipient-form.js' | asset_url }}" defer="defer"></script>
  <recipient-form
    class="recipient-form"
    data-type="{{ type }}"
    data-section-id="{{ section.id }}"
    data-product-variant-id="{{ product.selected_or_first_available_variant.id }}">
    {% if type == 'custom_field' %}
      <div class="custom-field">
        <div class="hidden">
          <input id="Recipient-checkbox-{{ section.id }}" type="checkbox" name="{{ gift_card_recipient_control_flag }}" disabled>
          <label class="recipient-checkbox mb-12" for="Recipient-checkbox-{{ section.id }}"></label>   
          <input type="hidden" name="{{ gift_card_recipient_control_flag }}" value="if_present" id="Recipient-control-{{ section.id }}">
          <input type="hidden" name="properties[__shopify_offset]" value="" id="Recipient-timezone-offset-{{ section.id }}">        
        </div>
        <div class="custom-field__top">
          <h5 class="mb-20">{{ bst.title_field }}</h5>
          <div class="rsmb-p mb-12 color-other">{{ bst.description_field }}</div>
        </div>
        <div class="recipient-fields__field">
          {%- assign max_chars_message = 200 -%}
          {%- assign max_chars_message_rendered = 'recipient.form.max_characters' | t: max_chars: max_chars_message -%}
          {%- assign message_label_rendered = 'recipient.form.message_label' | t -%}
          <div class="field">
            <input
              rows="10"
              id="Recipient-message-{{ section.id }}"
              class="text-area field__input color-other"
              name="properties[Custom field]"
              maxlength="{{ max_chars_message }}"
              placeholder="Customize note"
              aria-label="{{ message_label_rendered }} {{ max_chars_message_rendered }}"
            >{{ form.message }}</input>
          </div>
        </div>
        <div class="btn-upload-cloud w-full field__input flex cursor-pointer">
          <input
            id="Recipient-image-{{ section.id }}"
            placeholder="Upload image"
            type="file"
            accept="image/*"
            name="properties[Upload image]"
            class="form-input pointer file flex-1 block color-other">
