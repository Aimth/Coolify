{{ 'menu-column.css' | asset_url | stylesheet_tag }}
{% comment %}include file css section {% endcomment %}

{% liquid
  assign sst = section.settings
  assign container = sst.container
%}
{%- capture style -%}
  --section-padding-top: {{ sst.padding_top }}px; 
  --section-padding-bottom: {{ sst.padding_bottom }}px; 
{%- endcapture -%}
<div class="tp-mncol color-{{ sst.color_scheme }} gradient section-py {% if sst.reset_spacing == false %}section-mb{% endif %}" style="{{ style | strip | strip_newlines }}">
  <div class="{{ container }} section-full">
    {% render 'section-header'
      , sst: sst
    %}
    <div class="tp-mncol__wrapper">
      <div class="tp-mncol__inner tp-grid">
        {%- for block in section.blocks -%}
          {% liquid
            assign bst = block.settings
            assign links = linklists[bst.menu].links
            assign col_width_desktop = bst.col_width_desktop
            assign col_width_tablets = bst.col_width_tablets
            assign col_width_mobile = bst.col_width_mobile
          %}
          {%- capture styleBlock -%}
            --color-background-menu: {{ bst.background }};--column-count: {{ bst.column_count }};
          {%- endcapture -%}
          <div class="tp-mncol__item {{ col_width_desktop }}" style="{{ styleBlock | strip | strip_newlines }}">
            <div class="item-inner">
              {% if bst.heading != blank %}
                <h4 class="mb-30">{{ bst.heading }}</h4>
              {% endif %}
              <ul class="list-none">
                {% for link in links %}
                  <li class="{%  unless forloop.last %} mb-16 {% endunless %}">
                    <a href="{{ link.url }}">{{ link.title }}</a>
                  </li>
                {% endfor %}
              </ul>

            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

