{{ 'customer.css' | asset_url | stylesheet_tag }}
{% liquid
  assign sst = section.settings
%}
{%- capture style -%}
    --section-padding-top: {{ sst.padding_top }}px; --section-padding-bottom: {{ sst.padding_bottom }}px;
{%- endcapture -%}

<div class="full-width">

  <div class="customer register color-{{ sst.color_scheme }} gradient section-py" style="{{ style | strip | strip_newlines }}">

    <div class="register__wrap">
      <svg style="display: none">
        <symbol id="icon-error" viewBox="0 0 13 13">
          <circle
            cx="6.5"
            cy="6.50049"
            r="5.5"
            stroke="white"
            stroke-width="2" />
          <circle
            cx="6.5"
            cy="6.5"
            r="5.5"
            fill="#EB001B"
            stroke="#EB001B"
            stroke-width="0.7" />
          <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white" />
          <path
            d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z"
            fill="white"
            stroke="#EB001B"
            stroke-width="0.7">
        </symbol>
      </svg>
      {%- liquid
        assign rg_heading = section.settings.rg_heading
        assign rg_subheading = section.settings.rg_subheading
      -%}
      <h3 class="text-left mt-0 mb-20">
        {%- liquid
          if rg_heading != blank
            echo rg_heading
          else
            echo 'customer.login_page.content.rg_heading' | t
          endif
        -%}
      </h3>
      <div class="login__subtitle">
        {%- liquid
          if rg_subheading != blank
            echo rg_subheading
          else
            echo 'customer.login_page.content.rg_subheading' | t
          endif
        -%}
      </div>
      {%- form 'create_customer'
        , novalidate: 'novalidate' -%}
        {%- if form.errors -%}
          <div class="tp-form-message--error">
            <h2
              class="form__message"
              tabindex="-1"
              autofocus>
              <svg aria-hidden="true" focusable="false">
                <use href="#icon-error" />
              </svg>
              {{ 'templates.contact.form.error_heading' | t }}
            </h2>
            <ul>
              {%- for field in form.errors -%}
                <li>
                  {%- if field == 'form' -%}
                    {{ form.errors.messages[field] }}
                  {%- else -%}
                    <a href="#RegisterForm-{{ field }}">
                      {{ form.errors.translated_fields[field] | capitalize }}
                      {{ form.errors.messages[field] }}
                    </a>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
        <div class="field">
          <input
            class="field__input w-full"
            type="text"
            name="customer[first_name]"
            id="RegisterForm-FirstName"
            {% if form.first_name %}
            value="{{ form.first_name }}"
            {% endif %}
            autocomplete="given-name"
            placeholder="{{ 'customer.register.first_name' | t }}">
        </div>
        <div class="field">
          <input
            class="field__input w-full"
            type="text"
            name="customer[last_name]"
            id="RegisterForm-LastName"
            {% if form.last_name %}
            value="{{ form.last_name }}"
            {% endif %}
            autocomplete="family-name"
            placeholder="{{ 'customer.register.last_name' | t }}">
        </div>
        <div class="field">
          <input
            class="field__input w-full"
            type="email"
            name="customer[email]"
            id="RegisterForm-email"
            {% if form.email %}
            value="{{ form.email }}"
            {% endif %}
            spellcheck="false"
            autocapitalize="off"
            autocomplete="email"
            aria-required="true"
            {% if form.errors contains 'email' %}
            aria-invalid="true"
            aria-describedby="RegisterForm-email-error"
            {% endif %}
            placeholder="{{ 'customer.register.email' | t }}">
        </div>
        {%- if form.errors contains 'email' -%}
          <span id="RegisterForm-email-error" class="form__message">
            <svg aria-hidden="true" focusable="false">
              <use href="#icon-error" />
            </svg>
            {{ form.errors.translated_fields.email | capitalize }}
            {{ form.errors.messages.email }}.
          </span>
        {%- endif -%}
        <div class="field">
          <input
            class="field__input w-full"
            type="password"
            name="customer[password]"
            id="RegisterForm-password"
            aria-required="true"
            {% if form.errors contains 'password' %}
            aria-invalid="true"
            aria-describedby="RegisterForm-password-error"
            {% endif %}
            placeholder="{{ 'customer.register.password' | t }}">
        </div>
        {%- if form.errors contains 'password' -%}
          <span id="RegisterForm-password-error" class="form__message">
            <svg aria-hidden="true" focusable="false">
              <use href="#icon-error" />
            </svg>
            {{ form.errors.translated_fields.password | capitalize }}
            {{ form.errors.messages.password }}.
          </span>
        {%- endif -%}
        <button class="tp-btn tp-btn__primary mb-20">
          {{ 'customer.register.submit' | t }}
        </button>
        <div>
          <a href="/account/login" class="tp-btn tp-btn__underline">
            {{ 'customer.register_login' | t }}
          </a>
        </div>
      {%- endform -%}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "t:sections.main-register.name",
    "settings": [
      {
        "type": "text",
        "id": "rg_heading",
        "label": "t:sections.main-login.register_heading",
        "default": "First time at Storepify",
        "info": "If your website is multilingual, please leave this field blank, and you can translate it in the locale"
      },
      {
        "type": "text",
        "id": "rg_subheading",
        "label": "t:sections.main-login.register_subheading",
        "default": "Sign up for early Sale access plus tailored new arrivals, trends and promotions. To opt out, click unsubscribe in our emails.",
        "info": "If your website is multilingual, please leave this field blank, and you can translate it in the locale"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 80
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 80
      }
    ]
  }
{% endschema %}