{{ 'service.css' | asset_url | stylesheet_tag }}
{% comment %}include file css section {% endcomment %}

{% liquid
  assign sst = section.settings
  assign container = sst.container
  assign type_layout = sst.type_layout
  assign grid_background = sst.show_background_grid
%}
{%- capture style -%}
  --section-padding-top: {{ sst.padding_top }}px; 
  --section-padding-bottom: {{ sst.padding_bottom }}px; 
{%- endcapture -%}
{% capture classGrid %}
  tp-grid tp-grid--{{ sst.columns_mobile }}-col-mobile tp-grid--{{ sst.columns_tablets }}-col-tablets tp-grid--{{ sst.columns_desktop }}-col-desktop 
{% endcapture %}
<div class="tp-service {% if grid_background %}background-grid{% endif %} color-{{ sst.color_scheme }} gradient section-py {% if sst.reset_spacing == false %}section-mb{% endif %}" style="{{ style | strip | strip_newlines }}">
  <div class="{{ container }} section-full">
    {% render 'section-header'
      , sst: sst
    %}
    <div class="tp-service__wrapper {{ type_layout }}">
      <div class="tp-service__inner {{ classGrid }}">
        {%- for block in section.blocks -%}
          {% liquid
            assign bst = block.settings
          %}
          <div class="tp-service__item tp-grid__item w-full">
            <div class="item-inner flex items-center gap-12 md:gap-20">
              <div class="tp-service__item-img w-50 h-50 ">
                {% render 'responsive-image'
                  , image: bst.image
                  , class: 'h-full'
                  , w_default: 60
                  , h_default: 60 %}
              </div>
              <div class="tp-service__item-content flex-1">
                {%- if bst.title != blank -%}
                  <h4 class="mb-10">
                    {{ bst.title | escape }}
                  </h4>
                {%- endif -%}
                {%- if bst.content != blank -%}
                  <div class="rsmb-p">{{ bst.content }}</div>
                {%- endif -%}
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Service",
    "tag": "section",
    "disabled_on": {
      "groups": ["*"]
    },
    "settings": [
      {
        "type": "header",
        "content": "Section header"
      },
      {
        "type": "checkbox",
