{% capture colors %}
    <style>
        {%- for block in section.blocks -%}
          {% liquid
            assign bst = block.settings
            assign color_name = bst.heading | downcase | replace: ' ', '-'
            assign color_code = bst.color_code
            assign color_image = bst.color_image
          %}
            {%- if color_name != blank -%}
                .tp-custom-{{ color_name }}{
                    {% if color_image == blank %}
                        background-color:{{ color_code }} !important;
                        background-image: initial !important;
                    {% else  %}
                        background:{{ color_code }} url({{ color_image | img_url: '80x80' }}) no-repeat 50% 50%/cover !important;
                    {% endif %}
                }
            {%- endif -%}
        {%- endfor -%} 
    </style>
{% endcapture %}
{{ colors | strip_newlines | remove: '  ' | remove: '	' }}
{% schema %}
  {
    "name": "Custom Color",
    "settings": [],
    "limit": 1,
    "enabled_on": {
      "groups": ["custom.system"]
    },
    "blocks": [
