{{ 'store-location.css' | asset_url | stylesheet_tag }}
{% comment %}include file css section {% endcomment %}

{% liquid
  assign sst = section.settings
  assign container = sst.container
%}
{%- capture style -%}
  --section-padding-top: {{ sst.padding_top }}px; 
  --section-padding-bottom: {{ sst.padding_bottom }}px; 
{%- endcapture -%}
{% capture classGrid %}
  tp-grid tp-grid--{{ sst.columns_mobile }}-col-mobile tp-grid--{{ sst.columns_tablets }}-col-tablets tp-grid--{{ sst.columns_desktop }}-col-desktop 
{% endcapture %}
<div class="tp-st-location color-{{ sst.color_scheme }} gradient section-py {% if sst.reset_spacing == false %}section-mb{% endif %}" style="{{ style | strip | strip_newlines }}">
  <div class="{{ container }} section-full">
    {% render 'section-header'
      , sst: sst %}
    <div class="tp-st-location__inner {{ classGrid | strip | strip_newlines }}">
      {%- for block in section.blocks -%}
        {% liquid
          assign bst = block.settings
        %}
        <div class="tp-st-location__item tp-grid__item">
          {%- if bst.image != blank -%}
            <div class="relative mb-20">
              {% render 'responsive-image'
                ,
 image: bst.image
                ,
 aspect_ratio: sst.image_ratio
                ,
 custom_ratio: sst.custom_ratio
                ,
 class: 'h-full'
                ,
 w_default: 280
                ,
 h_default: 495
              %}
            </div>
          {%- endif -%}
          <div class="tp-st-location__item-info">
            <div class="info__header flex flex-row items-center justify-between mb-15">
              {%- if bst.title != blank -%}
                <h3 class="font-semibold mb-0">{{ bst.title }}</h3>
              {%- endif -%}
              {%- if bst.btn_content != blank -%}
                <div>
                  <a
                    {% if bst.link == blank %}
                    role="link"
                    aria-disabled="true"
                    {% else %}
                    href="{{ bst.link }}"
                    {% endif %}
                    {%- if bst.open_link == '_blank' -%}
                    target="_blank"
                    {%- else -%}
                    target="_self"
                    {%- endif -%}
                    class="tp-btn tp-btn__underline n-hvr">
                    {{ bst.btn_content | escape }}
                  </a>
                </div>
              {%- endif -%}
            </div>
            <div class="info-address flex items-start gap-5 mb-10">
              <b>{{ 'store-location.address' | t }}</b>
              <p class="mb-0">
                {{ bst.st_address }}</p>
            </div>
            <div class="info-address flex items-start gap-5 mb-10">
              <b>{{ 'store-location.email' | t }}</b>
              <p class="mb-0">{{ bst.email }}</p>
            </div>
            <div class="info-address flex items-start gap-5 mb-10">
              <b>{{ 'store-location.phone' | t }}</b>
              <p class="mb-0">{{ bst.phone }}</p>
            </div>
            <div class="info-address flex items-start gap-5 mb-0">
              <b>{{ 'store-location.time' | t }}</b>
              <p class="mb-0">{{ bst.open_time }}</p>
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Store Location",
    "tag": "section",
    "disabled_on": {
      "groups": ["*"]
    },
    "settings": [
      {
        "type": "header",
        "content": "Section header"
      },

      {
        "type": "checkbox",
        "id": "show_heading_header",
        "label": "Show \"Section header\"",
